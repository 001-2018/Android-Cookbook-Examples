<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
   
<persistence-unit name="ehealthinnovation">
	<description>
		This persistent unit models Patients, Readings, etc.
		Although only tested with Hibernate so far,
		it should work with any valid JPA provider.
        </description>

	<!--
	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	-->
	<provider>org.hibernate.ejb.HibernatePersistence</provider>

	<class>model.AdherenceCheck</class>
	<class>model.Admin</class>
	<class>model.Admission</class>
	<class>model.AlertProfile</class>
	<class>model.Caregiver</class>
	<class>model.ClientLogMessage</class>
	<class>model.Clinic</class>
	<class>model.ClinicalNote</class>
	<class>model.ContactInformation</class>
	<class>model.Demographic</class>
	<class>model.DeterminantSet</class>
	<class>model.Evaluation</class>
	<class>model.Goal</class>
	<class>model.InstructionTimeoutCheck</class>
	<class>model.Patient</class>
	<class>model.Person</class>
	<class>model.Privilege</class>
	<class>model.Reminder</class>
	<class>model.Scorecard</class>
	<class>model.Session</class>
	<class>model.Tag</class>
	
	<class>model.reading.BloodGlucoseReading</class>
	<class>model.reading.BloodPressureReading</class>
	<class>model.reading.EcgReading</class>
	<class>model.reading.PulseReading</class>
	<class>model.reading.SymptomReading</class>
	<class>model.reading.WeightReading</class>

	<class>model.action.AdherenceCheckAction</class>
	<class>model.action.EmailAction</class>
	<class>model.action.VoipAction</class>
	<class>model.action.WebsiteAction</class>
	<class>model.action.WirelessAction</class>
	
	<properties>
		<!-- Properties for Hibernate -->
		<property name="hibernate.hbm2ddl.auto" value="create-drop"/>
		<property name="hibernate.show_sql" value="false"/>
		<property name="hibernate.format_sql" value="false"/>
		<property name="hibernate.archive.autodetection" value="class"/>
		
		<!-- Moronically, you have to comment this out during unit testing; see code comment. -->
		<!-- 
		 -->
		<property name="hibernate.connection.datasource" value="java:jboss/datasources/RazorbackDatasource"/>
		
		<!-- 
		<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
		<property name="hibernate.connection.url" value="jdbc:mysql:///telemonitoring"/>
		<property name="hibernate.connection.username" value="root"/>     NOTUSED
		<property name="hibernate.connection.password" value="spamhead"/> NOTUSED
		 -->
		<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

	</properties>
	

</persistence-unit>

</persistence>
